{# {% extends '::base.html.twig' %} #}

{% block stylesheets %}
    <!-- Include CSS from AppBundle/Resources/public/css/ -->
    {% stylesheets '@AppBundle/Resources/public/css/chatroom.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

<div id="Header">
    <div id="HeaderRelativeWrapper">
        <div id="HeaderUserArea" title="Currently logged in as {{ app.user }}">
            <img id="HeaderAvatar" src="data:image/png;base64," />
            <strong>
                <div id="HeaderUsername">{{ app.user }}</div>
            </strong>
        </div>
        <div id="HeaderLogoutLinkArea">
            <div id="HeaderLogoutLink"><a href="{{ path('logout') }}">Logout</a></div>
        </div>
    </div>
</div>

<div id="Footer">
    <a href="{{ path('chatroom_pool') }}">
        Find chatrooms
    </a>
    <a href="{{ path('chatroom_new') }}">
        Create new chatroom
    </a>
    <a href="{{ path('chatroom_new') }}">
        Delete chatroom
    </a>
    <a href="http://www.bigbluebug.com/contact-us" target="_blank">
        Report bug
    </a>
    <a href="mailto: ricardo.sousa@cleverti.com" target="_blank">
        Contact developer
    </a>
</div>

<div id="AbsoluteWrapper">
    <div id="RelativeWrapper">
        <audio id="ConversationMessageBeep" style="display:none;"></audio>

        <div id="LeftSection">
            <div id="LeftSectionRelative">
                <div id="ChatroomWrapper" title="Chatroom description">
                    <div id="ChatroomDescription">{{ chatroom.description }}</div>
                </div>

                <div id="ChatroomNameWrapper">
                    <div id="ChatroomName" title="Chatroom name">{{ chatroom.name }}</div>
                </div>

                <div id="UsersList">
                    <div id="UsersListContainer">
                        <div class="UsersListLayer" id="UsersListChatroom">
                            <ul id="UsersListUl">
                                <li>User Name 1</li>
                                <li>User Name 2</li>
                                <li>User Name 3</li>
                                <li>User Name 4</li>
                                <li>User Name 5</li>
                                <li>User Name 6</li>
                                <li>User Name 7</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="RightSection">
            <div id="RightSectionRelative">

                <div id="ChatBoxContainer">
                    <div id="ChatBoxContainerRelative">
                        <div class="ChatBoxLayerMessages" id="ChatroomChatBox">
                            {{ chatroom.text | raw }}
                        </div>
                    </div>
                </div>

                <div id="InputTextWrapper">
                    <textarea id="InputTextArea" maxlength="2000"></textarea>
                </div>

                <div id="BottomWrapper">
                    <div id="NotificationArea"></div>

                    <div id="InputTextOptions">
                        <button id="SendButton">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<span id="msgPath" data-id="{{ path('receive_message') }}"></span>

{% if app.user == 'admin' %}
    {{ form(delete_form) }}
{% endif %}

<!-- Include Javascript from AppBundle/Resources/public/js/ -->
{% block javascripts %}
    {% javascripts '@AppBundle/Resources/public/js/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}